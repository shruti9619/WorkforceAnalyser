<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_dash_board"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.learn.shruti.workforceanalysis.DashBoardActivity">


    <android.support.design.widget.FloatingActionButton
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@android:color/holo_green_dark"
            android:id="@+id/addempfab"
            android:src="@mipmap/ic_person_add"
            app:borderWidth="0px" android:layout_width="wrap_content" app:backgroundTint="@android:color/holo_green_dark"
            app:fabSize="normal" app:elevation="13dp" android:layout_alignTop="@+id/showfeedbackfab"
            android:layout_alignParentStart="true" android:layout_marginStart="34dp"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@android:color/holo_blue_bright"
            android:layout_marginBottom="27dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/showplotfab"
            app:borderWidth="0px" android:layout_width="match_parent" app:backgroundTint="@color/colorAccent"
            app:fabSize="normal" app:elevation="13dp" android:layout_weight="0.06" android:layout_marginRight="130dp"
            android:layout_marginLeft="130dp" android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_equalizer_black"/>


    <android.support.design.widget.FloatingActionButton
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@android:color/holo_blue_bright"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="27dp"
            android:id="@+id/showfeedbackfab"
            android:src="@mipmap/ic_rate_review"
            app:borderWidth="0px" android:layout_width="wrap_content" app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal" app:elevation="13dp" android:layout_alignParentEnd="true"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:weightSum="1" android:layout_height="match_parent">
        <TextView
                android:text="Today's WorkForce Rating Analysis"
                android:layout_width="match_parent"
                android:layout_height="50px" android:id="@+id/textView" android:textStyle="bold"
                android:textSize="40px" android:textAlignment="center"
                android:textColor="@color/white" android:layout_weight="0.06" android:padding="10px"/>

        <TextView
                android:id="@+id/ratingtext" android:layout_weight="0.06"
                android:layout_marginTop="10dp" android:textStyle="bold" android:textSize="32dp"
                android:textAlignment="center" android:textColor="@color/black"
                android:typeface="monospace" android:background="?attr/colorAccent"
                android:layout_marginRight="45dp" android:layout_marginLeft="45dp" android:padding="10dp"
                android:textAllCaps="false" android:layout_height="50dp" android:layout_width="match_parent"
        />
        <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp" app:srcCompat="@drawable/customer" android:id="@+id/imageView2"
                android:layout_weight="0.06" android:background="@android:color/transparent" android:layout_marginTop="20dp"
                android:layout_marginLeft="67dp"/>


    </LinearLayout>
</RelativeLayout>
