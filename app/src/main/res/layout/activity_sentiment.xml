<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_sentiment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorPrimaryDark"
        tools:context="com.learn.shruti.workforceanalysis.SentimentActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:id="@+id/textView5" android:textColor="@android:color/white"
            android:text="@string/senti" android:typeface="serif"
            android:padding="10dp" android:background="?attr/colorControlHighlight" android:textAlignment="center"
            android:elevation="8dp" android:textStyle="normal|bold" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:layout_height="370dp" android:textSize="22dp"/>
    <TextView
            android:layout_marginTop="25dp" android:id="@+id/avgtv"
            android:layout_height="50dp" android:layout_below="@+id/textView5" android:layout_centerHorizontal="true"
            android:background="?attr/colorControlHighlight" android:textAlignment="center"
            android:textColor="@color/white" android:textStyle="normal|bold" android:textSize="30sp"
            android:padding="3dp" android:layout_width="230dp"/>
</RelativeLayout>
