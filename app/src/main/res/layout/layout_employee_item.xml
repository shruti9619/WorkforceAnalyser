<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true"
        android:background="@color/colorPrimaryDark"
        card_view:cardBackgroundColor="?attr/colorAccent" card_view:cardElevation="11dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:background="?android:selectableItemBackground" android:padding="10px" android:layout_margin="10px"
            android:minHeight="170dp" android:layout_height="wrap_content"
            android:id="@+id/recyclelayout">

        <TextView android:id="@+id/empnamerecycle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:text="Name:"
                  android:textColor="@android:color/black"
                  android:textSize="18sp" android:textStyle="normal|italic" android:padding="2px"/>

        <TextView android:id="@+id/empemailrecycle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/empnamerecycle"
                  android:text="Contact: "
                  android:layout_margin="5dp"
                  android:textColor="@android:color/black"
                  android:textSize="18sp" android:textStyle="normal|italic" android:padding="2px"/>

        <TextView android:id="@+id/empidrecycle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/empemailrecycle"
                  android:layout_margin="5dp"
                  android:text="Id:"
                  android:textColor="@android:color/black"
                  android:textSize="18sp" android:textStyle="normal|italic" android:padding="2px"/>


        <TextView android:id="@+id/empcontactrecycle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Phone:"
                  android:textColor="@android:color/black"
                  android:textSize="18sp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                  android:layout_below="@+id/empidrecycle" android:layout_alignParentStart="true"
                  android:textStyle="normal|italic" android:padding="2px"/>

        <TextView android:id="@+id/empdesigrecycle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Designation :"
                  android:textColor="@android:color/black"
                  android:textSize="18sp" android:layout_margin="5dp" android:layout_marginRight="5dp"
                  android:layout_below="@+id/empcontactrecycle" android:layout_alignParentStart="true"
                  android:textStyle="normal|italic" android:padding="2px"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>